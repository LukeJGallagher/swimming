# Streamlit Cloud Secrets Template
# Swimming Performance Analysis - Team Saudi
#
# INSTRUCTIONS:
# 1. Copy this file to secrets.toml (for local testing)
# 2. On Streamlit Cloud: Go to Settings > Secrets and paste the contents below
#
# IMPORTANT: Never commit actual secrets to git!

# Azure Blob Storage Connection (RECOMMENDED - faster, cheaper)
# Get from Azure Portal > Storage Account > Access Keys
AZURE_STORAGE_CONNECTION_STRING = "DefaultEndpointsProtocol=https;AccountName=YOUR_ACCOUNT;AccountKey=YOUR_KEY;EndpointSuffix=core.windows.net"

# Optional: Azure SQL Database Connection (legacy - still supported)
# AZURE_SQL_CONN = "Driver={ODBC Driver 17 for SQL Server};Server=tcp:your-server.database.windows.net,1433;Database=your_db;Uid=admin;Pwd=YOUR_PASSWORD;Encrypt=yes;TrustServerCertificate=no;Connection Timeout=30;"

# Optional: OpenRouter API for AI features
# OPENROUTER_API_KEY = "sk-or-v1-your-key-here"
